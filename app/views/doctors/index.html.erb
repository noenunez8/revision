<p id="notice"><%= notice %></p>

<h1 class="text-center">Médicos</h1>
<br>
<table class="table table-primary" >
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Especialidad</th>
      <th>Dirección</th>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
    <font size="2">
      <tr class="table-primary" >
        <td><%= doctor.first_name %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.speciality.name %></td>
        <td><%= doctor.direction.street %></td>
        <td><%= doctor.direction.number %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @doctors %>
<br>

<%= link_to 'New Doctor', new_doctor_path %>
