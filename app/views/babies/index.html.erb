<h1 class="text-center">Beb√©s</h1>


<table class="table table-primary">
  <thead>

    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha de Nacimiento</th>
      <th>Peso (g):</th>
      <th>Edad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @babies.each do |baby| %>

    <font size="2">
      <tr class="table-primary" >
        <td><%= baby.first_name %></td>
        <td><%= baby.last_name %></td>
        <td><%= baby.date_of_birth %></td>
        <td><%= baby.weight %></td>
        <td><%= distance_of_time_in_words(baby.date_of_birth, Time.now) %></td>
        <td><%= link_to 'Show', baby %></td>
        <td><%= link_to 'Edit', edit_baby_path(baby) %></td>
        <td><%= link_to 'Destroy', baby, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @babies %>
