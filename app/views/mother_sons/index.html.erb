<p id="notice"><%= notice %></p>

<h1 class="text-center">Madre e Hijo</h1>
<br>
<table class="table table-primary">
  <thead>
    <tr>
      <th>Madre</th>
      <th>Hijo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mother_sons.each do |mother_son| %>
    <font size="2">
      <tr class="table-primary" >
        <td><%= mother_son.mother.full_name %></td>
        <td><%= mother_son.baby.full_name%></td>
        <td><%= link_to 'Show', mother_son %></td>
        <td><%= link_to 'Edit', edit_mother_son_path(mother_son) %></td>
        <td><%= link_to 'Destroy', mother_son, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @mother_sons %>
<br>

<%= link_to 'New Mother Son', new_mother_son_path %>
