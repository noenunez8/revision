<p id="notice"><%= notice %></p>

<h1 class="text-center">Madres</h1>
<br>
<form method="GET" action="/mothers">
  Nombre o Apellido: <input type="text" name="filter" />
  <input type="submit" />
  <br>
  <br>
</form>
<table class="table table-bordered">
    <thead>
      <tr>
        <th><%= link_to "Nombre", mothers_path(:sort => true, :by => "first_name", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
        <th><%= link_to "Apellido",mothers_path(:sort => true, :by => "last_name", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
        <th><%= link_to "D.N.I", mothers_path(:sort => true, :by => "dni_number", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
        <th>Dirección</th>
        <th>Número</th>

        <th colspan="3"></th>
      </tr>

  <tbody>
    <% @mothers.each do |mother| %>
    <font size="2">
      <tr class="table-primary" >
        <td><%= mother.first_name %></td>
        <td><%= mother.last_name %></td>
        <td><%= mother.dni_number %></td>
        <td><%= mother.direction.street %></td>
        <td><%= mother.direction.number %></td>
        <td><%= link_to 'Show', mother %></td>
        <td><%= link_to 'Edit', edit_mother_path(mother) %></td>
        <td><%= link_to 'Destroy', mother, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @mothers %>
<br>

<%= link_to 'New Mother', new_mother_path %>
