<p id="notice"><%= notice %></p>

<h1 class="text-center">Centro de Atención</h1>
<br>
<form method="GET" action="/center_attentions">
  Nombre: <input type="text" name="filter" />
  <input type="submit" />
</form>
<br>
<br>
<table class="table table-primary">
  <thead>
    <tr>
      <th>Nomber</th>
      <th>Descripción</th>
      <th>Dirección</th>
      <th>Número</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @center_attentions.each do |center_attention| %>
    <font size="2">
      <tr class="table-primary" >

        <td><%= center_attention.name %></td>
        <td><%= center_attention.description %></td>
        <td><%= center_attention.direction.street%></td>
        <td><%= center_attention.direction.number%></td>
        <td><%= link_to 'Show', center_attention %></td>
        <td><%= link_to 'Edit', edit_center_attention_path(center_attention) %></td>
        <td><%= link_to 'Destroy', center_attention, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @center_attentions %>
<br>

<%= link_to 'New Center Attention', new_center_attention_path %>
