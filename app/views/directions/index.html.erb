<p id="notice"><%= notice %></p>

<h1 class="text-center">Dirección</h1>
<br>
<table class="table table-primary" >
  <thead>
    <tr>
      <th>Calle</th>
      <th>Número</th>
      <th>Localidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @directions.each do |direction| %>
    <font size="2">
      <tr class="table-primary" >
        <td><%= direction.street %></td>
        <td><%= direction.number %></td>
        <td><%= direction.location.name %></td>
        <td><%= link_to 'Show', direction %></td>
        <td><%= link_to 'Edit', edit_direction_path(direction) %></td>
        <td><%= link_to 'Destroy', direction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @directions %>
<br>

<%= link_to 'New Direction', new_direction_path %>
